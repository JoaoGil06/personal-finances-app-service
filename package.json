{
  "name": "personal-finances-app-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/main.js",
    "start:dev": "nodemon",
    "start:docker:dev": "docker compose -f docker-compose.dev.yml -p personal_finances_dev up --build -d",
    "stop:docker:dev": "docker compose -f docker-compose.dev.yml -p personal_finances_prod down",
    "start:docker:prd": "docker compose -f docker-compose.prod.yml -p personal_finances_prd up --build -d",
    "stop:docker:prd": "docker compose -f docker-compose.prod.yml -p personal_finances_prd down",
    "start:debug": "nodemon --exec \"node --inspect --require ts-node/register src/main.ts\"",
    "compile-api-docs": "swagger-cli bundle docs/swagger.yaml -o src/infrastructure/api/docs/swagger.json --dereference",
    "test-api-docs": "swagger-cli validate docs/swagger.yaml",
    "test": "npm run tsc -- --noEmit && jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.8.2",
    "nodemon": "^3.1.9"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.6",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "yaml": "^2.7.1"
  }
